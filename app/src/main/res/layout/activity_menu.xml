<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.mastervoucher.activities.HomeActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/view_total"
        android:background="@color/bg_header"
        android:layout_height="48dp"
        android:padding="16dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="TOTAL:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="R$ 25,00" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_above="@+id/view_payment"
        android:layout_below="@+id/view_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/view_payment"
        android:background="@color/primary_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            android:layout_toLeftOf="@+id/button_masterpass"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/button_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:text="pagar" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/button_masterpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="master pass" />

    </RelativeLayout>

</RelativeLayout>
