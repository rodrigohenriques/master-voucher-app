<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context="br.com.mastervoucher.activities.HomeActivity">

    <TextView
        android:layout_above="@+id/view_qrcode"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/view_qrcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_qrcode_anim"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_qrcode_bg" />

        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_qrcode" />

        <Button
            android:id="@+id/button_read_qrcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/view_qrcode"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Utilize o leitor de QR Code\npara acessar o evento."
        android:textColor="@color/white" />

</RelativeLayout>
