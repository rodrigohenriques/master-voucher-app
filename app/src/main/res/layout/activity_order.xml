<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.mastervoucher.activities.OrderActivity">

    <RelativeLayout
        android:id="@+id/view_amount"
        android:background="@color/primary_color"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/text_total"
            android:paddingLeft="@dimen/default_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="TOTAL" />

        <TextView
            android:id="@+id/text_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="R$ 0,00" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_above="@+id/view_confirm_receiver"
        android:layout_below="@+id/view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/view_confirm_receiver"
        android:background="@color/primary_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:minWidth="88dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="CONFIRMAR RECEBIMENTO" />

    </RelativeLayout>

</RelativeLayout>
